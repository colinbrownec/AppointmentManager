<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/employee_portrait"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:background="@color/black3"
        android:padding="3dp"
        android:src="@drawable/l_social_person" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp" >

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Euncine"
            android:textColor="@color/dark_blue"
            android:textSize="32dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envy Experience: "
                android:textColor="@color/black5"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/years_worked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 years"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Days: "
                android:textColor="@color/black5"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/work_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, Thur - Sun"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbies: "
                android:textColor="@color/black5"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/hobbies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singing and Cleaning"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>