<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#2d2d2d" />

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/top_line"
        android:background="@color/holo_title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Envy Nails Appointment Manager"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textSize="20dp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/action_bar"
        android:background="#FFF"
        android:orientation="vertical"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_main_big" />

        <!--  
        <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Envy Nails" /> -->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom_bar"
        android:background="#FFF" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/new_entry"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/holodark_darkblue"
            android:drawableTop="@drawable/l_content_event"
            android:onClick="goSchedule"
            android:paddingBottom="4dp"
            android:paddingTop="5dp"
            android:text="Schedules"
            android:textColor="#DDDDDD"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/holodark_darkblue"
            android:drawableTop="@drawable/l_social_person"
            android:onClick="goNothing"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:text="Profile"
            android:textColor="#DDDDDD"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/references"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/holodark_darkblue"
            android:drawableTop="@drawable/l_action_settings"
            android:onClick="goNothing"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:text="Settings"
            android:textColor="#DDDDDD"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/holodark_darkblue"
            android:drawableTop="@drawable/l_action_about"
            android:onClick="goNothing"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:text="About"
            android:textColor="#DDDDDD"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>